@{
    ViewData["Title"] = "Amministratore";
}

<h1 class="text-white mt-4">BENVENUTO</h1>
<h2 class="text-white">Inserisci le tue credenziali per accedere</h2>

<form asp-action="Amministratore" class="form-amministratore" style="display: flex; flex-direction: column; align-items: center; justify-content: center; min-height: 50vh;">

    <div>

        <h4>Username</h4>
        <input type="text" id="Username" name="Username" required />

        <h4 class="mt-3">Password</h4>
        <input type="password" />

    </div>

    <button type="submit" class="btn btn-modifica my-3 text-white">Accedi</button>
</form>

