@model E_Commerce_BW4_Team4.Models.Prodotto

@{
    ViewData["Title"] = "CreaProdotto";
}

<h1 class="my-4 text-white">Crea Prodotto</h1>

<hr />
<div class="row d-flex justify-content-center">
    <div class="col text-white">
        <form asp-action="CreaProdotto" enctype="multipart/form-data" class="needs-validation custom-form contForm" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="form-group mb-3">
                <label asp-for="NomeProdotto" class="control-label"></label>
                <input asp-for="NomeProdotto" class="form-control" />
                <span asp-validation-for="NomeProdotto" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DescrizioneProdotto" class="control-label"></label>
                <textarea asp-for="DescrizioneProdotto" class="form-control" rows="5"></textarea>
                <span asp-validation-for="DescrizioneProdotto" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PEGI" class="control-label"></label>
                <input asp-for="PEGI" class="form-control" />
                <span asp-validation-for="PEGI" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label>Genere principale</label>
                <div class="d-flex flex-wrap">
                    @foreach (var genere in ViewBag.TuttiIGeneri)
                    {
                        <div class="form-check me-3">
                            <input type="radio" name="Genere" value="@genere.IdGenere" class="form-check-input" />
                            <label class="form-check-label">@genere.TipoDiGenere</label>
                        </div>
                    }
                </div>
            </div>
            <div class="form-group mb-3">
                <label>Piattaforma</label>
                <div class="dropdown">
                    <button class="btn btn-modifica dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Seleziona Piattaforma
                    </button>
                    <ul class="dropdown-menu btn-modifica">
                        @foreach (var piattaforma in ViewBag.TutteLePiattaforme)
                        {
                            <li>
                                <label class="dropdown-item">
                                    <input type="radio" name="Piattaforma" value="@piattaforma.IdPiattaforma" />
                                    @piattaforma.NomePiattaforma
                                </label>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CodiceABarre" class="control-label"></label>
                <input asp-for="CodiceABarre" class="form-control" />
                <span asp-validation-for="CodiceABarre" class="text-danger"></span>
            </div>
            <div class="form-group form-check mb-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Disponibilita" /> @Html.DisplayNameFor(model => model.Disponibilita)
                </label>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Prezzo" class="control-label"></label>
                <input asp-for="Prezzo" type="number" class="form-control" />
                <span asp-validation-for="Prezzo" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label">Scegli Img Copertina</label>
                <input type="file" name="ImageA" class="form-control-file btn btn-modifica" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label">Scegli 1 Img</label>
                <input type="file" name="ImageB" class="form-control-file btn btn-modifica" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label">Scegli 2 Img</label>
                <input type="file" name="ImageC" class="form-control-file btn btn-modifica" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label">Scegli 3 Img</label>
                <input type="file" name="ImageD" class="form-control-file btn btn-modifica" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-modifica" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-controller="Home" asp-action="GestioneAmministratore" class="btn btn-secondary btn-sm">Torna indietro</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}