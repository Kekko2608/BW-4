@model IEnumerable<ProdottoCompleto>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "GestioneAmministratore";
}


<h1>Benvenuto @ViewBag.Username</h1>

<h2>lista Videogiochi</h2>

<div class="container">
    <div class="row">
        @foreach (var Prodotto in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@Prodotto.NomeProdotto</h5>
                        <p class="card-text">@Prodotto.DescrizioneProdotto</p>
                        <p class="card-text"><strong>Disponibilità:</strong> @Prodotto.Disponibilita</p>
                        <p class="card-text"><strong>Prezzo:</strong> @Prodotto.Prezzo.ToString("C")</p>
                        <a class="btn btn-warning" asp-controller="Home" asp-action="Index">Modifica</a>
                        <a class="btn btn-danger" asp-controller="Home" asp-action="Delete">Elimina</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<a class="btn btn-success" asp-controller="Home" asp-action="CreaProdotto">Aggiungi videogioco</a>
