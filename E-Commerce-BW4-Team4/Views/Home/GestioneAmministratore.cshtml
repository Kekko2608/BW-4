@model IEnumerable<ProdottoViewModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "GestioneAmministratore";
}


<h1 class="text-white">Benvenuto @ViewBag.Username</h1>

<h2 class="text-white">lista Videogiochi</h2>
<a class="btn btn-success" asp-controller="Home" asp-action="CreaProdotto">Aggiungi videogioco</a>

<div class="container mt-3 bg-white p-3">
    <table class="table table-striped">
        <thead>
            <tr class="border-bottom">
                <th scope="col">#</th>
                <th scope="col">Codice a barre</th>
                <th scope="col">Copertina</th>
                <th scope="col">Nome Prodotto</th>
                <th scope="col">Descrizione Prodotto</th>
                <th scope="col">Piattaforma</th>
                <th scope="col">Genere</th>
                <th scope="col">Brand</th>
                <th scope="col">PEGI</th>
                <th scope="col">Disponibilità</th>
                <th scope="col">Prezzo</th>
                <th scope="col">Modifiche</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <th scope="row">@p.IdProdotto</th>
                <td><img class="imgTable" src="@p.CoverImagePath" /></td>
                <td class="barcode" >@p.CodiceABarre</td>
                <td>@p.NomeProdotto</td>
                <td>@p.DescrizioneProdotto</td>
                <td>@p.NomePiattaforma</td>
                <td>@p.TipoDiGenere</td>
                <td>@p.Brand</td>
                <td>@p.PEGI</td>
                <td class="@(p.Disponibilita ? "text-success" : "text-danger")">@(p.Disponibilita ? "SI" : "NO")</td>
                <td class="col-prezzo">@p.Prezzo.ToString("C")</td>
                    <td>
                        <a class="btn btn-warning mb-2" asp-controller="Home" asp-action="Modifica" asp-route-id="@p.IdProdotto"><i class="bi bi-pencil-square"></i></a>
                        <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-IdProdotto="@p.IdProdotto"><i class="bi bi-trash"></i></a>
                    </td>
            </tr>
        }
        </tbody>
    </table>
</div>

