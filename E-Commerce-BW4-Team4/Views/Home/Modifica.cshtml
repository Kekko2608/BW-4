@model E_Commerce_BW4_Team4.Models.ProdottoCompleto

@{
    ViewData["Title"] = "Modifica";
    int? genereSelezionato = ViewBag.GenereSelezionato as int?;
    int? piattaformaSelezionata = ViewBag.PiattaformaSelezionata as int?;
}

<h1>Modifica</h1>

<h4>Prodotto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Modifica">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProdotto"/>
            <div class="form-group">
                <label asp-for="NomeProdotto" class="control-label"></label>
                <input asp-for="NomeProdotto" class="form-control" />
                <span asp-validation-for="NomeProdotto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescrizioneProdotto" class="control-label"></label>
                <input asp-for="DescrizioneProdotto" class="form-control" />
                <span asp-validation-for="DescrizioneProdotto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PEGI" class="control-label"></label>
                <input asp-for="PEGI" class="form-control" />
                <span asp-validation-for="PEGI" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodiceABarre" class="control-label"></label>
                <input asp-for="CodiceABarre" class="form-control" />
                <span asp-validation-for="CodiceABarre" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Disponibilita" /> @Html.DisplayNameFor(model => model.Disponibilita)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Prezzo" class="control-label"></label>
                <input asp-for="Prezzo" type="number" class="form-control" />
                <span asp-validation-for="Prezzo" class="text-danger"></span>
            </div>
          <!--  <div class="form-group">
                <label asp-for="Piattaforma" class="control-label"></label>
                <input asp-for="Piattaforma" class="form-control" />
                <span asp-validation-for="Piattaforma" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genere" class="control-label"></label>
                <input asp-for="Genere" class="form-control" />
                <span asp-validation-for="Genere" class="text-danger"></span>
            </div> -->
            <div class="form-group mb-3">
                <label>Generi</label>
                <div class="d-flex flex-wrap">
                    @foreach (var genere in ViewBag.TuttiIGeneri)
                    {
                        <div class="form-check me-3">
                            <input type="checkbox" name="Genere" value="@genere.IdGenere" class="form-check-input"
                            @(genereSelezionato == genere.IdGenere ? "checked" : "") />
                            <label class="form-check-label">@genere.TipoDiGenere</label>
                        </div>
                    }
                </div>
            </div>
            <div class="form-group mb-3">
                <label>Piattaforma</label>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Seleziona Piattaforma
                    </button>
                    <ul class="dropdown-menu">
                        @foreach (var piattaforma in ViewBag.TutteLePiattaforme)
                        {
                            <li>
                                <label class="dropdown-item">
                                    <input type="radio" name="Piattaforma" value="@piattaforma.IdPiattaforma" @(piattaformaSelezionata == piattaforma.IdPiattaforma ? "checked" : "") />
                                    @piattaforma.NomePiattaforma
                                </label>
                            </li>
                        }
                    </ul>
                </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
